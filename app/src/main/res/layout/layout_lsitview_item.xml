<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="名称"
        android:textColor="#000000"
        android:background="#55000000"
        android:textSize="14sp" />

    <com.example.admin.complex_listview.MyHorizontalScrollView
         android:id="@+id/scorllview"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvTitleOne"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标题一"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTitleTwo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标题二"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTitleThree"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标题三"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTitleFour"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标题四"
                android:textColor="#000000"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btTitleFive"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="标题五"
                android:textColor="#000000"
                android:textSize="14sp" />
        </LinearLayout>
    </com.example.admin.complex_listview.MyHorizontalScrollView>

</LinearLayout>